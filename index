<script>
(function(){
  const $ = s => document.querySelector(s); const $$ = s => Array.from(document.querySelectorAll(s));
  const state = { score:0, steps:[false,false,false,false,false], perStep:[0,0,0,0,0] };
  const updateUI = () => {
    $('#score').textContent = state.score;
    const done = state.steps.filter(Boolean).length;
    $('#bar').style.width = (done/5*100)+'%';
    $$('#steps .dot').forEach((d,i)=> d.classList.toggle('done', state.steps[i]));
  };
  const toast = (msg) => { const t=$('#toast'); t.textContent=msg; t.classList.add('show'); setTimeout(()=>t.classList.remove('show'),1400); };
  const confetti = () => {
    const colors=['#fde047','#a7f3d0','#93c5fd','#fca5a5','#f9a8d4'];
    for(let i=0;i<150;i++){
      const el=document.createElement('i'); el.className='confetti';
      el.style.left=Math.random()*100+'vw';
      el.style.background=colors[Math.floor(Math.random()*colors.length)];
      el.style.transform=`translateY(0) rotate(${Math.random()*360}deg)`;
      el.style.animationDelay=(Math.random()*0.6)+'s';
      el.style.width=(6+Math.random()*6)+'px'; el.style.height=(10+Math.random()*10)+'px';
      document.body.appendChild(el); setTimeout(()=>el.remove(),2600);
    }
  };

  const showIntro = ()=>{ $$('.step').forEach(s=>s.classList.remove('active')); window.scrollTo({top:0,behavior:'smooth'}); };
  const go = n => { if(n===0){ showIntro(); return; } $$('.step').forEach(s=>s.classList.remove('active')); $('#step-'+n)?.classList.add('active'); window.scrollTo({top:0,behavior:'smooth'}); };
  $('#start').addEventListener('click', ()=> go(1));
  const howBtn = $('#how');
  const howModal = $('#howModal');
  const howClose = $('#howClose');
  const openHow = ()=>{ if(!howModal) return; howModal.classList.add('open'); howModal.setAttribute('aria-hidden','false'); howModal.querySelector('.modalBox')?.focus(); };
  const closeHow = ()=>{ if(!howModal) return; howModal.classList.remove('open'); howModal.setAttribute('aria-hidden','true'); howBtn?.focus(); };
  howBtn?.addEventListener('click', (e)=>{ e.preventDefault(); openHow(); });
  howClose?.addEventListener('click', closeHow);
  howModal?.addEventListener('click', (e)=>{ if(e.target===howModal) closeHow(); });
  window.addEventListener('keydown', (e)=>{ if(e.key==='Escape' && howModal?.classList.contains('open')) closeHow(); });
  $$('.step [data-back]').forEach(b=> b.addEventListener('click', (e)=>{ const step = +e.target.closest('.step').id.split('-')[1]; if(step>1) go(step-1); else showIntro(); }));

  /* STEP 1: Drag & Drop */
  const cards1 = [
    {t:'Ola de frío en tu ciudad esta semana.',a:'tiempo'},
    {t:'Pronóstico de mañana: 80% lluvia.',a:'tiempo'},
    {t:'Tendencia de la temperatura media (1991–2020).',a:'clima'},
    {t:'Nevada intensa un día concreto.',a:'tiempo'},
    {t:'Anomalía mensual de temperatura global.',a:'clima'},
    {t:'Media de precipitación anual de 30 años.',a:'clima'},
    {t:'Rayas #ShowYourStripes (1850–2022).',a:'clima'},
    {t:'Viento fuerte esta tarde.',a:'tiempo'}
  ];
  const bank1 = $('#bank1');
  cards1.sort(()=>Math.random()-0.5).forEach((c,i)=>{
    const el=document.createElement('div'); el.className='draggable'; el.draggable=true; el.textContent=c.t; el.dataset.answer=c.a; el.id='d1-'+i;
    el.addEventListener('dragstart', e=> e.dataTransfer.setData('text/plain', el.id));
    bank1.appendChild(el);
  });
  $$('.zone').forEach(z=>{
    z.addEventListener('dragover', e=>{e.preventDefault(); z.style.background='rgba(34,197,94,.08)'});
    z.addEventListener('dragleave', ()=> z.style.background='rgba(255,255,255,.03)');
    z.addEventListener('drop', e=>{e.preventDefault(); z.style.background='rgba(255,255,255,.03)'; const id=e.dataTransfer.getData('text/plain'); const el=$('#'+id); if(el) z.appendChild(el);});
  });
  $('#check1').addEventListener('click', ()=>{
    let correct=0, total=cards1.length; [$('#zone-tiempo'),$('#zone-clima')].forEach(z=>z.classList.remove('correct','wrong'));
    $$('#zone-tiempo .draggable').forEach(d=>{ if(d.dataset.answer==='tiempo') correct++; });
    $$('#zone-clima .draggable').forEach(d=>{ if(d.dataset.answer==='clima') correct++; });
    const pts = Math.round((correct/total)*10);
    state.perStep[0]=pts; $('#p1').textContent=pts;
    const ok = correct===total; $('#step-1 [data-next]').disabled=!ok;
    if(ok){ if(!state.steps[0]){ state.score+=pts; state.steps[0]=true; confetti(); toast('¡Perfecto! Tiempo ≠ Clima'); } }
    updateUI();
  });

  /* STEP 2: Match pairs */
  const pairs2 = [
    {k:'co2', left:'CO₂ (dióxido de carbono)', right:'Gas de efecto invernadero más abundante; ~la mitad del calentamiento total.'},
    {k:'ch4', left:'CH₄ (metano)', right:'Potente gas de efecto invernadero, menos abundante que el CO₂.'},
    {k:'ghg', left:'Efecto invernadero', right:'La atmósfera retiene parte de la radiación de onda larga emitida por la Tierra.'},
    {k:'co2eq', left:'CO₂ equivalente', right:'Forma de comparar gases distintos usando el CO₂ como referencia.'}
  ];
  const L=$('#left2'), R=$('#right2');
  const shuffle = arr => arr.map(v=>[Math.random(),v]).sort((a,b)=>a[0]-b[0]).map(v=>v[1]);
  const fill2 = ()=>{
    L.innerHTML=''; R.innerHTML='';
    shuffle([...pairs2]).forEach(p=>{ const el=document.createElement('div'); el.className='item'; el.textContent=p.left; el.dataset.key=p.k; L.appendChild(el); });
    shuffle([...pairs2]).forEach(p=>{ const el=document.createElement('div'); el.className='item'; el.textContent=p.right; el.dataset.key=p.k; R.appendChild(el); });
  };
  fill2();
  let pickL=null, pickR=null, matched2=new Set();
  const update2 = ()=>{
    const done = matched2.size===pairs2.length; $('#step-2 [data-next]').disabled=!done; if(done && !state.steps[1]){ state.perStep[1]=10; $('#p2').textContent=10; state.score+=10; state.steps[1]=true; confetti(); toast('¡Emparejado!'); updateUI(); }
  };
  const onClickItem = (el, side)=>{
    if(el.classList.contains('matched')) return;
    if(side==='L'){ if(pickL) pickL.classList.remove('active'); pickL=el; el.classList.add('active'); }
    else{ if(pickR) pickR.classList.remove('active'); pickR=el; el.classList.add('active'); }
    if(pickL && pickR){ if(pickL.dataset.key===pickR.dataset.key){ matched2.add(pickL.dataset.key); [pickL,pickR].forEach(x=>{x.classList.add('matched'); x.classList.remove('active');}); pickL=null; pickR=null; }
      else{ const a=pickL,b=pickR; setTimeout(()=>{a.classList.remove('active'); b.classList.remove('active'); pickL=null; pickR=null;},350); }
      update2();
    }
  };
  L.addEventListener('click', e=>{ const el=e.target.closest('.item'); if(el) onClickItem(el,'L'); });
  R.addEventListener('click', e=>{ const el=e.target.closest('.item'); if(el) onClickItem(el,'R'); });
  $('#reset2').addEventListener('click', ()=>{ matched2.clear(); pickL=null; pickR=null; fill2(); state.perStep[1]=0; $('#p2').textContent=0; $('#step-2 [data-next]').disabled=true; });

  /* STEP 3: Quiz */
  const qs = [
    {q:'¿Qué hace el IPCC?', opts:[
      'Investiga desde cero y realiza experimentos climáticos propios',
      'Sintetiza la ciencia publicada y elabora informes de evaluación',
      'Es un grupo de activistas, no de científicos'], a:1},
    {q:'¿Qué afirmó el Informe de Síntesis 2023?', opts:[
      'Aún no hay evidencia suficiente del calentamiento',
      'El calentamiento 2011–2020 fue de ~1.1°C y es inequívocamente causado por actividades humanas',
      'El sol es la causa principal del calentamiento actual'], a:1},
    {q:'¿Cuántos Grupos de Trabajo principales tiene el IPCC?', opts:['2','3','5'], a:1},
    {q:'Las personas autoras y revisoras del IPCC…', opts:['Cobran por participar','Participan de forma altruista','Solo son de un país'], a:1},
    {q:'El consenso científico en literatura revisada por pares sobre la causa humana del CC es…', opts:['~60%','~85%','>99%'], a:2}
  ];
  const quizC = $('#quiz3');
  qs.forEach((o,i)=>{
    const q=document.createElement('div'); q.className='q'; q.innerHTML=`<h4>${i+1}. ${o.q}</h4>`;
    o.opts.forEach((t,j)=>{ const row=document.createElement('label'); row.className='opt';
      row.innerHTML=`<input type="radio" name="q${i}" value="${j}"> ${t} <span class="mark" id="mark_q${i}_${j}"></span>`; q.appendChild(row); });
    quizC.appendChild(q);
  });
  $('#check3').addEventListener('click', ()=>{
    let correct=0; qs.forEach((o,i)=>{ const sel=$(`input[name='q${i}']:checked`); const idx=sel?+sel.value:-1; $$("#quiz3 .mark").forEach(m=>m.style.background=''); if(idx===o.a) correct++; const mk = $(`#mark_q${i}_${idx}`); if(mk) mk.style.background = (idx===o.a? '#22c55e':'#ef4444'); });
    const pts=Math.round((correct/qs.length)*10); state.perStep[2]=pts; $('#p3').textContent=pts; const all=correct===qs.length; $('#step-3 [data-next]').disabled=!all; if(all && !state.steps[2]){ state.score+=pts; state.steps[2]=true; confetti(); toast('¡Pleno!'); } updateUI();
  });

  /* STEP 4: Memory */
  const pairs4 = [
    {k:'bio', t:'🌿 Biodiversidad', d:'Cambios de distribución y fenología; mayor vulnerabilidad'},
    {k:'salud', t:'🩺 Salud', d:'Calor extremo, vectores y salud mental'},
    {k:'tip', t:'⚠️ Puntos de inflexión', d:'Umbrales que pueden generar efectos en cascada'},
    {k:'lim', t:'🌍 Límites planetarios', d:'6 de 9 ya transgredidos'}
  ];
  const mkDeck = ()=>{
    const deck=[...pairs4.map(p=>({k:p.k,side:'t',label:p.t})),...pairs4.map(p=>({k:p.k,side:'d',label:p.d}))].map(v=>({r:Math.random(),...v})).sort((a,b)=>a.r-b.r);
    const grid=$('#grid4'); grid.innerHTML=''; deck.forEach((c)=>{
      const card=document.createElement('div'); card.className='cardM'; card.dataset.key=c.k; card.dataset.side=c.side;
      card.innerHTML=`<div class="face front">❖</div><div class="face back">${c.label}</div>`; grid.appendChild(card);
    });
  }
  mkDeck();
  let open=[], matched4=new Set();
  $('#grid4').addEventListener('click', e=>{
    const card=e.target.closest('.cardM'); if(!card || card.classList.contains('matched')) return;
    if(open.includes(card)) return; card.classList.add('flipped'); open.push(card);
    if(open.length===2){ const [a,b]=open; const match = a.dataset.key===b.dataset.key && a.dataset.side!==b.dataset.side; setTimeout(()=>{
      if(match){ a.classList.add('matched'); b.classList.add('matched'); matched4.add(a.dataset.key); if(matched4.size===pairs4.length){ if(!state.steps[3]){ state.perStep[3]=10; $('#p4').textContent=10; state.score+=10; state.steps[3]=true; $('#step-4 [data-next]').disabled=false; confetti(); toast('¡Memoria climática desbloqueada!'); updateUI(); } }
      }else{ a.classList.remove('flipped'); b.classList.remove('flipped'); }
      open=[]; }, 550);
    }
  });
  $('#reset4').addEventListener('click', ()=>{ matched4.clear(); open=[]; mkDeck(); state.perStep[3]=0; $('#p4').textContent=0; $('#step-4 [data-next]').disabled=true; });

  /* STEP 5: Dos verdades y un bulo */
  const rounds5 = [
    {opts:[
      {t:'Vivir sin coche particular reduce mucho la huella de carbono.', bulo:false},
      {t:'Reciclar y cambiar bombillas son las acciones MÁS efectivas para bajar emisiones.', bulo:true},
      {t:'Evitar un vuelo transatlántico puede recortar tu huella anual de forma notable.', bulo:false}
    ]},
    {opts:[
      {t:'La crisis climática se arregla solo reduciendo CO₂; lo demás es secundario.', bulo:true},
      {t:'Además de mitigar CO₂, hay que abordar biodiversidad, contaminación y desigualdad.', bulo:false},
      {t:'Evitar la “visión de túnel de carbono” mejora la toma de decisiones.', bulo:false}
    ]},
    {opts:[
      {t:'La ciudadanía no pinta nada: todo depende de empresas y gobiernos.', bulo:true},
      {t:'La participación ciudadana y el activismo colectivo son palancas clave.', bulo:false},
      {t:'Apoyar políticas ambiciosas (COP y ámbito local) acelera la transición.', bulo:false}
    ]},
    {opts:[
      {t:'La esperanza es esperar a que otras personas solucionen el problema.', bulo:true},
      {t:'La esperanza se trabaja: acción sostenida y cuidados para mantener el esfuerzo.', bulo:false},
      {t:'Cuidarnos (autocuidado y cuidados compartidos) sostiene el compromiso a largo plazo.', bulo:false}
    ]},
    {opts:[
      {t:'Comprar un coche eléctrico siempre es mejor que no tener coche.', bulo:true},
      {t:'Pasar de coche eléctrico a no tener coche reduce aún más la huella del transporte.', bulo:false},
      {t:'Contratar energía 100% renovable descarboniza tu consumo eléctrico.', bulo:false}
    ]},
  ];
  let r5Index=0, r5Score=0, r5Answered=0;
  const r5Title=$('#r5-title'); const r5Choices=$('#r5-choices'); const r5Next=$('#r5-next');
  const renderRound5 = ()=>{
    r5Next.disabled=true; r5Choices.innerHTML='';
    const round = rounds5[r5Index];
    const options = round.opts.map(o=>({r:Math.random(),...o})).sort((a,b)=>a.r-b.r);
    r5Title.innerHTML = `<strong>Ronda ${r5Index+1}</strong> — Señala el bulo`;
    options.forEach((o)=>{
      const btn=document.createElement('button'); btn.type='button'; btn.className='choice'; btn.textContent=o.t; btn.addEventListener('click',()=>{
        if(btn.classList.contains('correct')||btn.classList.contains('wrong')) return;
        if(o.bulo){ btn.classList.add('correct'); r5Score+=2; toast('¡Bien! Has cazado el bulo.'); }
        else { btn.classList.add('wrong'); toast('No es bulo. Sigue observando con lupa.'); }
        r5Answered++; $$('#r5-choices .choice').forEach(c=>c.disabled=true);
        r5Next.disabled=false; $('#p5').textContent=r5Score; state.perStep[4]=r5Score; });
      r5Choices.appendChild(btn);
    });
  };
  renderRound5();
  r5Next.addEventListener('click',()=>{
    if(r5Index < rounds5.length-1){ r5Index++; renderRound5(); }
    if(r5Index === rounds5.length-1){ r5Next.textContent='Última ronda'; }
    if(r5Index === rounds5.length-1 && r5Answered>=rounds5.length){ $('#finish').disabled=false; }
    if(r5Answered>=rounds5.length){ $('#finish').disabled=false; if(!state.steps[4]){ state.steps[4]=true; state.score += state.perStep[4]; updateUI(); if(state.perStep[4]===10){ confetti(); } }
    }
  });

  /* Nav next buttons */
  $$('.step [data-next]').forEach(b=> b.addEventListener('click', ()=>{ const cur=parseInt(b.closest('.step').id.split('-')[1]); go(cur+1); }));

  /* Finish */
  $('#finish').addEventListener('click', ()=>{
    // Asegura sumar puntos de pasos previos si no se habían marcado como completados
    for(let i=0;i<4;i++){ if(!state.steps[i]){ state.score+=state.perStep[i]; state.steps[i]=true; } }
    updateUI();
    const total = state.perStep.reduce((a,b)=>a+b,0); $('#finalScore').textContent= total; 
    const lvl = total>=45? '🌟 Aliado/a del Clima (Oro)': total>=35? '🌿 Defensor/a (Plata)': total>=25? '🌱 Explorador/a (Bronce)':'💡 En marcha';
    $('#level').textContent=lvl; 
    const li = (t,v)=>`<li>• ${t}: <strong>${v}/10</strong></li>`;
    $('#summary').innerHTML = [
      li('1) Es real', state.perStep[0]),
      li('2) Somos nosotras', state.perStep[1]),
      li('3) Consenso científico', state.perStep[2]),
      li('4) Es mala', state.perStep[3]),
      li('5) Hay esperanza', state.perStep[4])
    ].join('');
    confetti(); go(6);
  });

  /* Print & restart */
  $('#print').addEventListener('click', ()=> window.print());
  $('#restart').addEventListener('click', ()=> location.reload());

  // Start with intro visible
  showIntro();
  updateUI();
})();
</script>
</body>
</html>
